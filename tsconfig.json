{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@core/*": [
        "core/*"
      ],
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  }
}